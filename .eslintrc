{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "linebreak-style": 0,
    "react/sort-comp": [
      1,
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "/^on.+$/",
          "everything-else",
          "render",
          "/^render.+$/"
        ]
      }
    ],
    "import/prefer-default-export": 0,
    "import/no-unresolved": "off",
    "no-console": 0,
    "arrow-parens": [
      "error",
      "always"
    ],
    "no-underscore-dangle": 0,
    "react/forbid-prop-types": [
      1,
      {
        "forbid": [
          "any",
          "array"
        ]
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/extensions": [1,
      { "js": "never", "scss": "always", "json": "always" }
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "camelcase": [0, {"properties": "never"}]
  },
  "globals": {
    "window": true,
    "document": true,
    "BUILD_ENV": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}